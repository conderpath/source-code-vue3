{
  "compilerOptions": {
    "baseUrl": ".", // 以当前路径为基准进行查找
    "outDir": "dist", // 输出的目录
    "sourceMap": true, // sourcemap方便调试
    "target": "es2016", // 目标语法
    "module": "esnext", // 模块格式
    "moduleResolution": "node", // 模块解析方式
    "strict": false, // 严格模式
    "resolveJsonModule": true, // 解析json模块
    "esModuleInterop": true, // 允许通过es6语法引入commonjs模块
    "jsx": "preserve", // jsx不转义
    "lib": ["esnext", "dom"], // 支持的类库 esnext及dom
    "paths": { 
      // 当引入@vue开头的文件时  到packages下的src目录进行查找
      "@vue3/*": ["packages/*/src"]
    }
  }
}